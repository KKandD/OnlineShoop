<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Codecool.CodecoolShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href='https://css.gg/math-minus.css' rel='stylesheet'>
    <link href='https://css.gg/shopping-cart.css' rel='stylesheet'>
    <link href='https://css.gg/math-plus.css' rel='stylesheet'>
    <link href='https://css.gg/shopping-bag.css' rel='stylesheet'>

    @model dynamic
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">Codecool.CodecoolShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        @*@{
            @if (Model.CartItems != null)
            {
                var itemTotalQuantity = Model.CartItems.Count;
                <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Cart" asp-action="Basket">
                    <i class="gg-shopping-cart"></i>
                    <span class="badge bg-secondary">@itemTotalQuantity</span>
                </a>
            }
            else
            {
                <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Cart" asp-action="Basket">
                    <i class="gg-shopping-cart"></i>
                    <span class="badge bg-secondary">0</span>
                </a>
            }

        }*@
                        <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Cart" asp-action="Basket">
                            <i class="gg-shopping-cart"></i>
                            <span class="badge bg-secondary"></span>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @*@if (!Model.UserLogged)
                    {*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Signin">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Signup">Registration</a>
                        </li>
                    @*}
                    else
                    {*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Signout">Logout</a>
                        </li>
                    @* } *@
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Codecool.CodecoolShop - <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
